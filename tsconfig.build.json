{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "noEmit": false, 
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"], 
    "module": "ESNext", 
    "jsx": "react-jsx", 
    "skipLibCheck": true, 
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true, 
    "moduleDetection": "force",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/main.tsx",
    "src/App.tsx",
  ]
}